{
	# 日志级别
	debug
	
	# 电子邮件（用于ACME注册）
	email admin@domain
}

# Caddy HTTPS 服务 - NaiveProxy (内部端口8443)
# sing-box 在 443 做 TLS termination，fallback 非 Reality 流量到这里
domain:8443, *.domain:8443 {
	bind 127.0.0.1
	
	tls {
		dns cloudflare cloudflareApiToken
	}
	
	route {
		# NaiveProxy Forward Proxy
		forward_proxy {
			basic_auth naive_user naive_passwd
			hide_ip
			hide_via
			probe_resistance
		}
		
		# 默认回落（伪装网站）
		reverse_proxy https://www.catalog.update.microsoft.com {
			header_up Host {upstream_hostport}
			header_up X-Forwarded-Host {host}
		}
	}
}
